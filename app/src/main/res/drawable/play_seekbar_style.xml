<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:id="@android:id/background" android:drawable="@mipmap/player_ic_seekbar_bg" />
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="#99ffffff" android:endColor="#99ffffff" android:angle="270.0" android:centerY="0.75" android:centerColor="#99ffffff" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0.0dip" />
                <gradient android:startColor="@color/main_color" android:endColor="@color/main_color" android:angle="270.0" android:centerY="0.75" android:centerColor="@color/main_color" />
            </shape>
        </clip>
    </item>
</layer-list>
