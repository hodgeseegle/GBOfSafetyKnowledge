<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/Button_preschool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/preshchool_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/preschoolbtn_margin_left"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:onClick="onClick"/>

    <ImageView
        android:id="@+id/Button_primaryschool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/preschoolbtn_margin_left"
        android:src="@drawable/primaryschool_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:onClick="onClick"/>

</RelativeLayout>
