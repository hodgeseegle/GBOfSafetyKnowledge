<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutanswer_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_answer"
    tools:context="com.eebbk.gbofsafetyknowledge.activity.AnswerActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/ViewPager_Question"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/padding_top_bottom"
        android:paddingTop="@dimen/padding_top_bottom" />

    <LinearLayout
        android:id="@+id/LinearLayout_indicator"
        android:layout_width="@dimen/horizontal_width"
        android:layout_height="@dimen/horizontal_hight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/horizontal_margin_bottom">

        <com.eebbk.gbofsafetyknowledge.controls.HorizontalListView
            android:id="@+id/HorizontalListView_listview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <ViewStub
        android:id="@+id/ViewStub_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_right"
        android:layout_marginLeft="@dimen/padding_left"
        android:layout_marginRight="@dimen/padding_right"
        android:layout_marginStart="@dimen/padding_left"
        android:layout_marginTop="@dimen/padding_top_bottom"
        android:layout="@layout/layout_answer_title" />

    <ViewStub
        android:id="@+id/ViewStub_layout_proposal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layouttitle_bg"
        android:layout_marginEnd="@dimen/proposal_layout_margin_right"
        android:layout_marginLeft="@dimen/proposal_layout_margin_left"
        android:layout_marginRight="@dimen/proposal_layout_margin_right"
        android:layout_marginStart="@dimen/proposal_layout_margin_left"
        android:layout_marginTop="@dimen/proposal_layout_margin_top"
        android:layout="@layout/layout_proposal" />

    <com.eebbk.gbofsafetyknowledge.controls.MyLoadingView
        android:id="@+id/MyLoadingView_LoadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

</RelativeLayout>